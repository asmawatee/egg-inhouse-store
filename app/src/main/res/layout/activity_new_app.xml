<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F9B92F"
            android:id="@+id/toolbar">

        </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">


            <ImageView
                android:id="@+id/imageicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                app:srcCompat="@mipmap/ic_launcher" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/textname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Name Application"
                    android:inputType="textPersonName" />


                <EditText
                    android:id="@+id/textversion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Version"
                    android:inputType="textPersonName" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/textdescri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="20"
                android:hint="Description"
                android:lines="3"
                android:gravity="top"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/textBundle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Package ID"
                android:textColor="#000000"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/textbundle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="com.company.app"
                android:inputType="textPersonName" />
            <TextView
                android:id="@+id/texBuild1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Versian code"
                android:textColor="#000000"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/textbuild"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="1"
                android:inputType="textPersonName" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="File Application URL"
                android:textColor="#000000"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/texturl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="https://url.com/file"
                android:inputType="textPersonName" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Screenshot"
                android:textColor="#000000"
                android:textSize="16dp"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/btnimage"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:background="#F9B92F"
                android:text="Select photo" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recylerViewImage"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#FF6600"
                android:text="Edit Permission"
                android:id="@+id/editssion"/>


            <Button
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="3dp"
                android:background="#F9B92F"
                android:text="SAVE" />


            </LinearLayout>


    </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>


